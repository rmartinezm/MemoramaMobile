<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_btns_numero_cartas"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/info_regresar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:src="@drawable/regresar"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/linear_logos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_regresar"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_unam"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/unam"
             />

        <ImageView
            android:id="@+id/logo_umobile"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/unam_mobile" />

    </LinearLayout>

    <TextView
        android:id="@+id/info_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_logos"
        android:layout_gravity="bottom"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/developers"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_dev"
        android:layout_marginTop="15dp"
        android:autoLink="web"
        android:gravity="center"
        android:text="@string/web"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/link"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/derechos"
        android:textColor="@android:color/white"
        android:textSize="10sp" />


</RelativeLayout>
