<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:id="@+id/fragment_cuatro_cartas">


    <ImageView
        android:id="@+id/cuatro_img_uno"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/carta_boca_abajo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/cuatro_img_dos"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/carta_boca_abajo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/cuatro_img_tres"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/carta_boca_abajo"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/cuatro_img_uno"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/cuatro_img_cuatro"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/carta_boca_abajo"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/cuatro_img_dos"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>